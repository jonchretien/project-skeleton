# editorconfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Use 2 spaces
[*.{css,html,js}]
indent_style = space
indent_size = 2

[*.{css,js}]
quote_type = single

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4

# The JSON files contain newlines inconsistently
[*.json]
indent_size = 2
insert_final_newline = ignore

# Minified static files shouldn't be changed
[dist/**.min.{css,js}]
indent_style = ignore
insert_final_newline = ignore
quote_type = ignore
